<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <record model="ir.ui.view" id="view_hr_overtime_tree">
            <field name="name">hr.overtime.tree</field>
            <field name="model">hr.overtime</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="employee_id" />
                    <field name="overtime_hours" />
                    <field name="state" />
                    <field name="approver_id" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_hr_overtime_form">
            <field name="name">hr.overtime.form</field>
            <field name="model">hr.overtime</field>
            <field name="arch" type="xml">
                <header>
                    <button
                        string="Submit"
                        type="object"
                        name="action_submit"
                        class="btn-primary"
                        states="draft"
                    />
                    <button
                        string="Approve"
                        type="object"
                        name="action_approve"
                        class="btn-primary"
                        attrs="{'invisible': [('can_approve', '=', False)]}"
                    />
                    <button
                        string="Reject"
                        type="object"
                        name="action_reject"
                        class="btn-primary"
                        attrs="{'invisible': [('can_reject', '=', False)]}"
                    />
                    <button
                        string="Reset to Draft"
                        type="object"
                        name="action_reset_to_draft"
                        class="btn-secondary"
                        states="rejected,approved" />
                    <field
                        name="state"
                        widget="statusbar"
                        statusbar_visible="draft,to_be_approve,approved"
                        readonly="1" />
                </header>
                <form>
                    <field name="can_approve" attrs="{'invisible': 1, 'readonly': 1}"/>
                    <field name="can_reject" attrs="{'invisible': 1, 'readonly': 1}"/>
                    <sheet>
                        <group>
                            <field name="employee_id"
                                attrs="{'readonly': [('state', '!=', 'draft')]}" />
                            <field name="date" attrs="{'readonly': [('state', '!=', 'draft')]}" />
                            <field name="overtime_hours" widget="float_time"
                                attrs="{'readonly': [('state', '!=', 'draft')]}" />
                            <field name="need_second_approver"
                                attrs="{'readonly': [('state', '!=', 'draft')]}" />
                            <field name="approver_id"
                                attrs="{'readonly': [('state', '!=', 'draft')]}" />
                            <field name="second_approver_id"
                                attrs="{'invisible': [('need_second_approver', '=', False)], 'readonly': [('state', '!=', 'draft')]}" />
                            <field name="reason" attrs="{'readonly': [('state', '!=', 'draft')]}" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>

</odoo>